@inject NavigationManager NavigationManager

<header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md
               border-b border-slate-200 dark:border-slate-800">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <a href="" class="flex items-baseline gap-1.5">
                <span class="text-base font-semibold text-slate-950 dark:text-white">Victor Broering</span>
                <span class="text-sm font-medium text-slate-400 dark:text-slate-500">dev.</span>
            </a>

            @* Desktop menu *@
            <div class="hidden md:flex items-center gap-8">
                <NavLink href="" Match="NavLinkMatch.All"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Home
                </NavLink>
                <NavLink href="counter"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Counter
                </NavLink>
                <NavLink href="blog"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Blog
                </NavLink>
                <NavLink href="auth"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Auth Required
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        <NavLink href="Account/Manage"
                                 class="text-sm font-medium text-slate-600 hover:text-primary-600
                                        dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                            @context.User.Identity?.Name
                        </NavLink>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@NavigationManager.ToBaseRelativePath(NavigationManager.Uri)" />
                            <button type="submit"
                                    class="text-sm font-medium text-slate-600 hover:text-primary-600
                                           dark:text-slate-400 dark:hover:text-primary-400
                                           transition-colors cursor-pointer">
                                Logout
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink href="Account/Login"
                                 class="text-sm font-medium text-slate-600 hover:text-primary-600
                                        dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                            Login
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>

                <a href="https://github.com/broeringvictor" target="_blank" rel="noreferrer noopener"
                   aria-label="GitHub"
                   class="p-2 rounded-md text-slate-600 hover:bg-slate-100
                          dark:text-slate-400 dark:hover:bg-slate-800 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                    </svg>
                </a>
                <a href="https://linkedin.com/in/victorbroering" target="_blank" rel="noreferrer noopener"
                   aria-label="LinkedIn"
                   class="p-2 rounded-md text-slate-600 hover:bg-slate-100
                          dark:text-slate-400 dark:hover:bg-slate-800 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>

                <button onclick="toggleDarkMode()"
                        class="p-2 rounded-md text-slate-600 hover:bg-slate-100
                               dark:text-slate-400 dark:hover:bg-slate-800 transition-colors cursor-pointer">
                    <svg id="icon-moon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                    </svg>
                    <svg id="icon-sun" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.66 7.66l-.71-.71M4.05 4.05l-.71-.71M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </button>
            </div>

            @* Mobile hamburger — plain JS, works in SSR *@
            <button onclick="toggleMobileMenu()"
                    class="md:hidden p-2 rounded-md text-slate-600 hover:bg-slate-100
                           dark:text-slate-400 dark:hover:bg-slate-800 cursor-pointer">
                <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        @* Mobile menu — hidden by default, toggled via JS *@
        <div id="mobile-menu" class="hidden md:hidden py-4 space-y-2 border-t border-slate-200 dark:border-slate-800">
            <a href="" class="block px-3 py-2 rounded-md text-sm font-medium
                             text-slate-700 hover:bg-slate-100 dark:text-slate-300
                             dark:hover:bg-slate-800 transition-colors">
                Home
            </a>
            <a href="counter" class="block px-3 py-2 rounded-md text-sm font-medium
                                     text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                     dark:hover:bg-slate-800 transition-colors">
                Counter
            </a>
            <a href="blog" class="block px-3 py-2 rounded-md text-sm font-medium
                                  text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                  dark:hover:bg-slate-800 transition-colors">
                Blog
            </a>
            <a href="auth" class="block px-3 py-2 rounded-md text-sm font-medium
                                  text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                  dark:hover:bg-slate-800 transition-colors">
                Auth Required
            </a>

            <AuthorizeView>
                <Authorized>
                    <a href="Account/Manage" class="block px-3 py-2 rounded-md text-sm font-medium
                                                    text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                                    dark:hover:bg-slate-800 transition-colors">
                        @context.User.Identity?.Name
                    </a>
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@NavigationManager.ToBaseRelativePath(NavigationManager.Uri)" />
                        <button type="submit"
                                class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium
                                       text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                       dark:hover:bg-slate-800 transition-colors cursor-pointer">
                            Logout
                        </button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="Account/Login" class="block px-3 py-2 rounded-md text-sm font-medium
                                                   text-primary-600 hover:bg-primary-50 dark:text-primary-400
                                                   dark:hover:bg-slate-800 transition-colors">
                        Login
                    </a>
                </NotAuthorized>
            </AuthorizeView>

            <div class="flex items-center gap-2 px-3 pt-2">
                <a href="https://github.com/broeringvictor" target="_blank" rel="noreferrer noopener"
                   aria-label="GitHub"
                   class="p-1.5 rounded-md text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                </a>
                <a href="https://linkedin.com/in/victorbroering" target="_blank" rel="noreferrer noopener"
                   aria-label="LinkedIn"
                   class="p-1.5 rounded-md text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
                <button onclick="toggleDarkMode()"
                        class="p-1.5 rounded-md text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800 transition-colors cursor-pointer">
                    <svg id="icon-moon-mobile" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                    </svg>
                    <svg id="icon-sun-mobile" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.66 7.66l-.71-.71M4.05 4.05l-.71-.71M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </button>
            </div>
        </div>
    </nav>
</header>
