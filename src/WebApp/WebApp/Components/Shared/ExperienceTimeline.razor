@* Reusable SSR-only timeline component for professional experience *@

<section class="mx-auto max-w-[75ch] px-4 py-16">
    <h2 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-slate-100">
        @Title
    </h2>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">@Subtitle</p>

    <ol class="relative mt-10 border-s border-slate-200 dark:border-slate-800">
        @foreach (var item in Experiences)
        {
            <li class="mb-12 ms-6 last:mb-0">
                @* Timeline dot *@
                <span class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border-2 border-primary-500 bg-white dark:border-primary-400 dark:bg-slate-950"></span>

                @* Period badge *@
                <span class="mb-2 inline-block rounded-full bg-primary-50 px-3 py-0.5 text-xs font-medium text-primary-700 dark:bg-primary-900/25 dark:text-primary-300">
                    @item.Period
                </span>

                @* Title + Company *@
                <h3 class="text-base font-semibold text-slate-900 dark:text-slate-100">
                    @item.Role
                    <span class="font-normal text-slate-400 dark:text-slate-500">&mdash;</span>
                    @if (!string.IsNullOrEmpty(item.Url))
                    {
                        <a href="@item.Url"
                           target="_blank"
                           rel="noreferrer noopener"
                           class="font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300">
                            @item.Company
                        </a>
                    }
                    else
                    {
                        <span class="font-medium text-slate-700 dark:text-slate-300">@item.Company</span>
                    }
                </h3>

                @* Description paragraphs *@
                @if (item.Descriptions is { Count: > 0 })
                {
                    <div class="mt-3 space-y-2 text-sm leading-relaxed text-slate-600 dark:text-slate-400">
                        @foreach (var desc in item.Descriptions)
                        {
                            <p>@((MarkupString)desc)</p>
                        }
                    </div>
                }

                @* Tech pills *@
                @if (item.Technologies is { Count: > 0 })
                {
                    <div class="mt-4 flex flex-wrap gap-1.5">
                        @foreach (var tech in item.Technologies)
                        {
                            <span class="rounded-full border border-slate-200 bg-slate-50 px-2.5 py-0.5 text-xs font-medium text-slate-600
                                         dark:border-slate-700 dark:bg-slate-800/60 dark:text-slate-300">
                                @tech
                            </span>
                        }
                    </div>
                }
            </li>
        }
    </ol>
</section>

@code {
    [Parameter]
    public string Title { get; set; } = "Experiência Profissional";

    [Parameter]
    public string Subtitle { get; set; } = "Trajetória e contribuições.";

    public sealed class ExperienceItem
    {
        public string Period { get; set; } = "";
        public string Role { get; set; } = "";
        public string Company { get; set; } = "";
        public string? Url { get; set; }
        public List<string> Descriptions { get; set; } = [];
        public List<string> Technologies { get; set; } = [];
    }
}

