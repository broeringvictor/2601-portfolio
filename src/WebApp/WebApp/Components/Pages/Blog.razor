@page "/blog"
@using WebApp.Entities
@using WebApp.Services
@inject MarkdownService MarkdownService

<PageTitle>Blog</PageTitle>

<div class="mx-auto max-w-[75ch] px-4 py-8">
    <h1 class="text-xl font-bold tracking-tight text-slate-900 dark:text-slate-100">Blog</h1>
    <p class="mt-1 text-sm text-slate-600 dark:text-slate-400">Ãšltimos posts e artigos.</p>

    @if (_posts == null)
    {
        <div class="mt-8 text-center text-sm text-slate-500 dark:text-slate-400">Carregando...</div>
    }
    else if (_posts.Count == 0)
    {
        <div class="mt-8 text-center text-sm text-slate-500 dark:text-slate-400">Nenhum post publicado ainda.</div>
    }
    else
    {
        <div class="mt-6 divide-y divide-slate-200 dark:divide-slate-800">
            @foreach (var post in _posts)
            {
                <article class="py-5 first:pt-0">
                    <a href="/post/@post.Slug" class="group block">
                        @if (!string.IsNullOrEmpty(post.OpenGraphImage))
                        {
                            <div class="overflow-hidden rounded-md">
                                <img src="@post.OpenGraphImage"
                                     alt="@post.Title"
                                     class="h-40 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                                     loading="lazy" />
                            </div>
                        }
                        <time class="mt-2 block text-xs text-slate-500 dark:text-slate-400"
                              datetime="@post.PublishedAt.ToString("yyyy-MM-dd")">
                            @post.PublishedAt.ToString("dd MMM yyyy")
                        </time>
                        <h2 class="mt-1 text-base font-semibold text-slate-900 group-hover:text-primary-600 dark:text-slate-100 dark:group-hover:text-primary-400 transition-colors">
                            @post.Title
                        </h2>
                        @if (!string.IsNullOrEmpty(post.Excerpt))
                        {
                            <p class="mt-1 text-sm text-slate-600 dark:text-slate-400 line-clamp-2">@post.Excerpt</p>
                        }
                        @if (post.Tags.Count > 0)
                        {
                            <div class="mt-2 flex flex-wrap gap-1.5">
                                @foreach (var tag in post.Tags.Take(4))
                                {
                                    <span class="rounded-full bg-primary-50 px-2 py-0.5 text-xs font-medium text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
                                        @tag
                                    </span>
                                }
                            </div>
                        }
                    </a>
                </article>
            }
        </div>
    }
</div>

@code {
    private List<BlogPost>? _posts;

    protected override async Task OnInitializedAsync()
    {
        _posts = await MarkdownService.GetAllPostsAsync();
    }
}
