@implements IDisposable

@inject NavigationManager NavigationManager

<header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md
               border-b border-slate-200 dark:border-slate-800">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <a href="" class="flex items-baseline gap-1.5">
                <span class="text-base font-semibold text-slate-950 dark:text-white">Victor Broering</span>
                <span class="text-sm font-medium text-slate-400 dark:text-slate-500">dev.</span>
            </a>

            @* Desktop menu *@
            <div class="hidden md:flex items-center gap-8">
                <NavLink href="" Match="NavLinkMatch.All"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Home
                </NavLink>
                <NavLink href="counter"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Counter
                </NavLink>
                <NavLink href="blog"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Blog
                </NavLink>
                <NavLink href="auth"
                         class="text-sm font-medium text-slate-600 hover:text-primary-600
                                dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                    Auth Required
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        <NavLink href="Account/Manage"
                                 class="text-sm font-medium text-slate-600 hover:text-primary-600
                                        dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                            @context.User.Identity?.Name
                        </NavLink>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit"
                                    class="text-sm font-medium text-slate-600 hover:text-primary-600
                                           dark:text-slate-400 dark:hover:text-primary-400
                                           transition-colors cursor-pointer">
                                Logout
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink href="Account/Login"
                                 class="text-sm font-medium text-slate-600 hover:text-primary-600
                                        dark:text-slate-400 dark:hover:text-primary-400 transition-colors">
                            Login
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>

                <button onclick="toggleDarkMode()"
                        class="p-2 rounded-md text-slate-600 hover:bg-slate-100
                               dark:text-slate-400 dark:hover:bg-slate-800 transition-colors cursor-pointer">
                    <svg id="icon-moon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                    </svg>
                    <svg id="icon-sun" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.66 7.66l-.71-.71M4.05 4.05l-.71-.71M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </button>
            </div>

            @* Mobile hamburger *@
            <button @onclick="ToggleMenu"
                    class="md:hidden p-2 rounded-md text-slate-600 hover:bg-slate-100
                           dark:text-slate-400 dark:hover:bg-slate-800 cursor-pointer">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    @if (isMenuOpen)
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12" />
                    }
                    else
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    }
                </svg>
            </button>
        </div>

        @* Mobile menu *@
        @if (isMenuOpen)
        {
            <div class="md:hidden py-4 space-y-2 border-t border-slate-200 dark:border-slate-800">
                <NavLink href="" Match="NavLinkMatch.All"
                         class="block px-3 py-2 rounded-md text-sm font-medium
                                text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                dark:hover:bg-slate-800 transition-colors">
                    Home
                </NavLink>
                <NavLink href="counter"
                         class="block px-3 py-2 rounded-md text-sm font-medium
                                text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                dark:hover:bg-slate-800 transition-colors">
                    Counter
                </NavLink>
                <NavLink href="experiencia"
                         class="block px-3 py-2 rounded-md text-sm font-medium
                                text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                dark:hover:bg-slate-800 transition-colors">
                    Experiência
                </NavLink>
                <NavLink href="blog"
                         class="block px-3 py-2 rounded-md text-sm font-medium
                                text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                dark:hover:bg-slate-800 transition-colors">
                    Blog
                </NavLink>
                <NavLink href="auth"
                         class="block px-3 py-2 rounded-md text-sm font-medium
                                text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                dark:hover:bg-slate-800 transition-colors">
                    Auth Required
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        <NavLink href="Account/Manage"
                                 class="block px-3 py-2 rounded-md text-sm font-medium
                                        text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                        dark:hover:bg-slate-800 transition-colors">
                            @context.User.Identity?.Name
                        </NavLink>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit"
                                    class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium
                                           text-slate-700 hover:bg-slate-100 dark:text-slate-300
                                           dark:hover:bg-slate-800 transition-colors cursor-pointer">
                                Logout
                            </button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink href="Account/Login"
                                 class="block px-3 py-2 rounded-md text-sm font-medium
                                        text-primary-600 hover:bg-primary-50 dark:text-primary-400
                                        dark:hover:bg-slate-800 transition-colors">
                            Login
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        }
    </nav>
</header>

@code {
    private string? currentUrl;
    private bool isMenuOpen;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void ToggleMenu() => isMenuOpen = !isMenuOpen;

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        isMenuOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
