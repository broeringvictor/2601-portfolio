@page "/blog"
@using WebApp.Entities
@using WebApp.Services
@inject MarkdownService MarkdownService

<PageTitle>Blog</PageTitle>

<div class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100">Blog</h1>
    <p class="mt-2 text-slate-600 dark:text-slate-400">Ãšltimos posts e artigos.</p>

    @if (_posts == null)
    {
        <div class="mt-12 text-center text-slate-500 dark:text-slate-400">Carregando...</div>
    }
    else if (_posts.Count == 0)
    {
        <div class="mt-12 text-center text-slate-500 dark:text-slate-400">Nenhum post publicado ainda.</div>
    }
    else
    {
        <div class="mt-10 divide-y divide-slate-200 dark:divide-slate-800">
            @foreach (var post in _posts)
            {
                <article class="py-8 first:pt-0">
                    <a href="/post/@post.Slug" class="group flex flex-col gap-4 sm:flex-row">
                        @if (!string.IsNullOrEmpty(post.OpenGraphImage))
                        {
                            <div class="shrink-0 overflow-hidden rounded-lg sm:w-48 lg:w-56">
                                <img src="@post.OpenGraphImage"
                                     alt="@post.Title"
                                     class="h-40 w-full object-cover transition-transform duration-300 group-hover:scale-105 sm:h-32 lg:h-36"
                                     loading="lazy" />
                            </div>
                        }
                        <div class="min-w-0 flex-1">
                            <div class="flex items-center gap-3 text-sm text-slate-500 dark:text-slate-400">
                                <time datetime="@post.PublishedAt.ToString("yyyy-MM-dd")">
                                    @post.PublishedAt.ToString("dd MMM yyyy")
                                </time>
                                @if (post.Tags.Count > 0)
                                {
                                    <span>&middot;</span>
                                    @foreach (var tag in post.Tags)
                                    {
                                        <span class="rounded-full bg-primary-50 px-2 py-0.5 text-xs font-medium text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
                                            @tag
                                        </span>
                                    }
                                }
                            </div>
                            <h2 class="mt-2 text-xl font-semibold text-slate-900 group-hover:text-primary-600 dark:text-slate-100 dark:group-hover:text-primary-400 transition-colors">
                                @post.Title
                            </h2>
                            @if (!string.IsNullOrEmpty(post.Excerpt))
                            {
                                <p class="mt-2 text-slate-600 dark:text-slate-400 line-clamp-2">@post.Excerpt</p>
                            }
                            <span class="mt-3 inline-block text-sm font-medium text-primary-600 group-hover:text-primary-700 dark:text-primary-400 dark:group-hover:text-primary-300">
                                Ler mais &rarr;
                            </span>
                        </div>
                    </a>
                </article>
            }
        </div>
    }
</div>

@code {
    private List<BlogPost>? _posts;

    protected override async Task OnInitializedAsync()
    {
        _posts = await MarkdownService.GetAllPostsAsync();
    }
}
